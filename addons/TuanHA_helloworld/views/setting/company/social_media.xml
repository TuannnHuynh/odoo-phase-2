<odoo>
    <record id="view_res_company_form_inherit_social_media" model="ir.ui.view">
        <field name="name">res.company.form.inherit.social_media</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='social_media']" position="replace">
                <group string="Social Media" name="social_media">
                    <group>
                        <field name="twitter_account" placeholder="Twitter Account" string="Twitter"/>
                        <field name="twitter_icon" placeholder="Twitter link" string="Icon"/>
                    </group>
                    <group>
                        <field name="facebook_account" string="Facebook" placeholder="Facebook Account"/>
                        <field name="facebook_icon" placeholder="Facebook link" string="Icon"/>
                    </group>
                    <group>
                        <field name="github_account" string="GitHub" placeholder="GitHub Account"/>
                        <field name="github_icon" placeholder="GitHub link" string="Icon"/>
                    </group>
                    <group>
                        <field name="linkedin_account" string="LinkedIn" placeholder="LinkedIn Account"/>
                        <field name="linkedin_icon" placeholder="LinkedIn link" string="Icon"/>
                    </group>
                    <group>
                        <field name="youtube_account" string="YouTube" placeholder="YouTube Account"/>
                        <field name="youtube_icon" placeholder="YouTube link" string="Icon"/>
                    </group>
                    <group>
                        <field name="instagram_account" string="Instagram" placeholder="Instagram Account"/>
                        <field name="instagram_icon" placeholder="Instagram link" string="Icon"/>
                    </group>
                    <group>
                        <field name="tiktok_account" string="TikTok" placeholder="TikTok Account"/>
                        <field name="tiktok_icon" placeholder="TikTok link" string="Icon"/>
                    </group>
                    <group>
                        <field name="zalo_account" string="Zalo" placeholder="Zalo Account"/>
                        <field name="zalo_icon" placeholder="Zalo link" string="Icon"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
